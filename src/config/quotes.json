{
    "auto": {
        "title": "Assurance Auto",
        "description": "Obtenez un devis précis en 3 étapes simples.",
        "steps": [
            {
                "id": "vehicle_info",
                "label": "Votre Véhicule",
                "fields": [
                    {
                        "name": "marque",
                        "type": "select",
                        "label": "Marque",
                        "options": [
                            "Dacia",
                            "Renault",
                            "Peugeot",
                            "Volkswagen",
                            "Autre"
                        ],
                        "required": true
                    },
                    {
                        "name": "annee",
                        "type": "number",
                        "label": "Année",
                        "placeholder": "Ex: 2022",
                        "required": true
                    },
                    {
                        "name": "puissance",
                        "type": "select",
                        "label": "Puissance Fiscale",
                        "options": [
                            "6 CV",
                            "7 CV",
                            "8 CV",
                            "9 CV+"
                        ],
                        "required": true
                    }
                ]
            },
            {
                "id": "usage_info",
                "label": "Usage & Garanties",
                "fields": [
                    {
                        "name": "usage",
                        "type": "select",
                        "label": "Usage du véhicule",
                        "options": [
                            "Privé",
                            "Professionnel",
                            "Mixte"
                        ],
                        "required": true
                    },
                    {
                        "name": "formule",
                        "type": "radio",
                        "label": "Formule souhaitée",
                        "options": [
                            "Tiers Simple",
                            "Tiers Plus",
                            "Tous Risques"
                        ],
                        "required": true
                    }
                ]
            },
            {
                "id": "contact_info",
                "label": "Coordonnées",
                "fields": [
                    {
                        "name": "nom",
                        "type": "text",
                        "label": "Nom complet",
                        "placeholder": "Votre nom",
                        "required": true
                    },
                    {
                        "name": "email",
                        "type": "email",
                        "label": "Email",
                        "placeholder": "exemple@mail.com",
                        "required": true
                    },
                    {
                        "name": "phone",
                        "type": "tel",
                        "label": "Téléphone (+212)",
                        "placeholder": "6 00 00 00 00",
                        "required": true
                    }
                ]
            }
        ]
    },
